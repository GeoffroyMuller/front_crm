<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Devis</title>
  </head>

  <body>
    <style>
      :root {
        --border: 1px solid rgb(220, 220, 220);
      }

      body {
        padding: 32px;
        font-family: "Montserrat", sans-serif;
        font-weight: 400;
        font-size: 16px;
        color: #636363;
        margin: 0;
      }

      p {
        margin: 0;
      }

      h1 {
        font-size: 2em;
        font-weight: 600;
        margin-top: 0;
        margin-left: 0;
        margin-right: 0;
        margin-bottom: 24px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        border: var(--border); 
      }

      thead {
        background-color: #818cf8 !important;
        color: white;
      }


      td {
        padding: 16px 14px;
        text-align: left;
      }

      th {
        padding: 20px 14px;
        text-align: left;
      }

      

      .content {
        display: flex;
        flex-direction: column;
        gap: 30px;
      }
      .content .head {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .content .modalities {
      }

      .page-footer {
        position: fixed;
        bottom: 16px;
        left: 0;
        display: flex;
        width: 100%;
        justify-content: center;
      }
    </style>

    <h1>Devis #<%= identifier %></h1>

    <div class="content">
      <div class="head">
        <div>
          <%= responsible?.firstname || '' %> <%= responsible?.lastname || '' %>
          <br />
          <%= responsible?.company?.name || '' %>
        </div>
        <div>
          <%= client?.firstname || '' %> <%= client?.lastname || '' %> <br />
          <%= client?.company?.name || '' %>
        </div>
      </div>
      <table style="<%= !lines?.length ? 'display: none;' : '' %>">
        <thead>
          <tr>
            <th>DESCRIPTION</th>
            <th>QUANTITÃ‰</th>
            <th>PRIX UNITAIRE</th>
            <th>TVA</th>
            <th>TOTAL</th>
          </tr>
        </thead>
        <tbody>
          <% (lines||[]).forEach(function(line){ %>

          <tr>
            <td style="max-width: 300px"><%- line?.description || '' %></td>
            <td style="text-align: center;"><%= line?.qty || '' %></td>
            <td><%= line?.unit_price || '' %></td>
            <td><%= line?.vatRate || '' %></td>
            <td><%= (line?.unit_price || 0) * (line?.qty || 0) %></td>
          </tr>

          <% }); %>
        </tbody>
        <tfoot></tfoot>
      </table>
      <div class="modalities"><%- modalities || '' %></div>
    </div>

    <div class="page-footer"><%- footer || '' %></div>
  </body>
</html>
